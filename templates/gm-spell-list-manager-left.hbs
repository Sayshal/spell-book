<!-- Left Sidebar: Available spell lists -->
<div class="spell-lists-sidebar card">
	<!-- Collapser Button -->
	<button type="button" class="sidebar-collapser collapser vertical" data-action="toggleSidebar"
		aria-label="{{localize "SPELLMANAGER.Buttons.HideLists"}}">
		<i class="fas fa-caret-left"></i>
	</button>

	<h2>{{localize "SPELLMANAGER.Columns.AvailableLists"}}</h2>
	<div class="lists-container">
		{{#if availableSpellLists.length}}
			<ul class="spell-list-items">
				{{#each availableSpellLists as |list|}}
					<li class="spell-list-item" data-uuid="{{list.uuid}}">
						<div class="list-item-header" data-action="selectSpellList" data-uuid="{{list.uuid}}">
							<div class="list-name">
								<i class="fas fa-book {{#if (lookup ../customListMap list.uuid)}}has-custom-version{{/if}}"></i>
								<span>{{list.name}}</span>
							</div>
							<div class="list-meta">
								<span class="spell-count">{{localize "SPELLMANAGER.Status.SpellCount" count=list.spellCount}}</span>
								<span class="meta-separator">â€¢</span>
								<span class="source">{{list.pack}}</span>
							</div>
						</div>
					</li>
				{{/each}}
			</ul>
		{{else}}
			<p class="no-lists">{{localize "SPELLMANAGER.Columns.NoLists"}}</p>
		{{/if}}
		<div class="list-controls">
			<button type="button" class="create-new-button" data-action="createNewList">
				<i class="fas fa-plus"></i> {{localize "SPELLMANAGER.Buttons.CreateNew"}}
			</button>
		</div>
	</div>
</div>
