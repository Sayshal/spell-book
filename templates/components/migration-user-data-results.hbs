<!-- User Data Migration Overview -->
<p><strong>{{localize 'SPELLBOOK.Migrations.UserDataMigration'}}</strong>
  {{localize 'SPELLBOOK.Migrations.UserDataUpdated' count=userDataResults.processed}}
</p>

<!-- User-Specific Migration Details -->
{{#if userDataResults.users.length}}
  <ul>
    {{#each userDataResults.visibleUsers}}
      <li>{{this.name}}
        <!-- Data Cleanup Count -->
        {{#if this.cleaned}}({{localize 'SPELLBOOK.Migrations.EntriesCleaned' count=this.cleaned}}){{/if}}
        <!-- Error Count -->
        {{#if this.errors.length}}({{localize 'SPELLBOOK.Migrations.ErrorsFound' count=this.errors.length}}){{/if}}
      </li>
    {{/each}}

    <!-- User List Truncation Indicator -->
    {{#if userDataResults.hasMoreUsers}}
      <li>{{localize 'SPELLBOOK.Migrations.AndMoreUsers' count=userDataResults.remainingUserCount}}</li>
    {{/if}}
  </ul>
{{/if}}
