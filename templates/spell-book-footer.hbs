{{!-- Footer based off FoundryVTTs /templates/generic/form-footer.hbs --}}
<footer>
	<div class="spell-prep-tracking">
		<span class="current-count">{{spellPreparation.current}}</span>/<span
			class="max-count">{{spellPreparation.maximum}}</span>{{localize 'SPELLBOOK.Footer.PreparedLabel'}}
	</div>
	<div class="footer-buttons">
		{{#each buttons as |button|}}
			<button type="{{button.type}}" {{#if button.name}}name="{{button.name}}" {{/if}} class="{{button.cssClass}}"
				{{#if button.action}}data-action="{{button.action}}" {{/if}} {{disabled button.disabled}}>
				{{#if button.icon}}<i class="{{button.icon}}" inert></i>{{/if}}
				{{#if button.label}}<label inert>{{localize button.label}}</label>{{/if}}
			</button>
		{{/each}}
	</div>
</footer>
