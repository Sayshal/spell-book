<div class="class-list-content">
	{{#if classes}}
		{{#if (gt classes.length 0)}}
			<ul class="class-list">
				{{#each classes as |class|}}
					<li class="class-item {{#if class.isSelected}}selected{{/if}} {{#if class.hasSpellList}}has-list{{/if}}"
						data-class-id="{{class.id}}" data-action="selectClass">
						<div class="class-name">
							{{#if class.nameDisplay}}
								{{{class.nameDisplay}}}
							{{else}}
								{{class.label}}
							{{/if}}
						</div>
						{{#if class.hasSpellList}}
							<div class="class-indicator"><i class="fas fa-check-circle"></i></div>
						{{/if}}
					</li>
				{{/each}}
			</ul>
		{{else}}
			<p class="no-classes">{{localize "spell-book.ui.noClasses"}}</p>
		{{/if}}
	{{else}}
		<p class="no-classes">{{localize "spell-book.ui.noClasses"}}</p>
	{{/if}}
</div>
