<div class="spell-book-container">
	<!-- Sidebar section -->
	<div class="sidebar card" role="complementary">
		<!-- Sidebar Controls Container -->
		<div class="sidebar-controls">
			<!-- Filter Configuration Button -->
			<button type="button" class="filter-config-button unbutton interface-only" data-action="configureFilters"
				data-tooltip="{{localize 'SPELLBOOK.UI.FilterControls'}}"
				aria-label="{{localize 'SPELLBOOK.UI.FilterControls'}}">
				<i class="fas fa-cog" aria-hidden="true"></i>
			</button>

			<!-- Cantrip Settings Button (GM Only) -->
			{{#if isGM}}
				<button type="button" class="cantrip-config-button unbutton interface-only"
					data-action="configureCantripSettings" data-tooltip="{{localize 'SPELLBOOK.UI.SpellSettings'}}"
					aria-label="{{localize 'SPELLBOOK.UI.SpellSettings'}}">
					<i class="fas fa-magic" aria-hidden="true"></i>
				</button>
			{{/if}}

			<!-- Sidebar Collapse Button -->
			<button type="button" class="sidebar-collapser collapser vertical unbutton interface-only"
				data-action="toggleSidebar" data-tooltip="{{localize 'SPELLBOOK.UI.ToggleSidebar'}}"
				aria-label="{{localize 'SPELLBOOK.UI.ToggleSidebar'}}" aria-expanded="true">
				<i class="fas fa-caret-left" aria-hidden="true"></i>
			</button>
		</div>

		{{> "modules/spell-book/templates/player/sidebar.hbs"}}

		<!-- Footer container for open sidebar -->
		<div class="sidebar-footer-container"></div>
	</div>
	<!-- Place the tab elements directly in the template -->
	{{#> "modules/spell-book/templates/player/tab-navigation.hbs"}}{{/modules/spell-book/templates/player/tab-navigation.hbs}}

		<!-- Main content -->
		<section class="spell-book-content" role="main" aria-label="{{localize 'SPELLBOOK.UI.SpellList'}}">
			<!-- Place tab content directly -->
			{{#> "modules/spell-book/templates/player/tab-spells.hbs"}}{{/modules/spell-book/templates/player/tab-spells.hbs}}
				{{#if isWizard}}
					{{#> "modules/spell-book/templates/player/tab-wizard-spellbook.hbs"}}{{/modules/spell-book/templates/player/tab-wizard-spellbook.hbs}}
				{{/if}}
		</section>

		<!-- Footer container for collapsed sidebar -->
		<div class="collapsed-footer hidden" role="complementary" aria-label="{{localize 'SPELLBOOK.UI.SpellPreparation'}}">
		</div>
</div>
