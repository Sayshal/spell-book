<div class="wizardbook tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}"
	data-class-identifier="{{classIdentifier}}">
	<div class="spells-container">
		{{#if hasError}}
			{{> "modules/spell-book/templates/components/error-message.hbs" message=errorMessage}}
		{{else}}
			{{#if (or isWizard isForceWizard)}}
				<div class="spellbook-rules">
					<div class="spellbook-header">
						<h2>{{localize 'SPELLBOOK.Wizard.NewSpellsTitle'}}</h2>
						<i class="fas fa-info-circle spellbook-help-icon"
							data-tooltip="{{localize 'SPELLBOOK.Wizard.NewSpellsInfo1'}}<br><br>{{localize 'SPELLBOOK.Wizard.NewSpellsInfo2'}}"></i>
					</div>
				</div>
				{{!-- Spell levels will be rendered dynamically by JavaScript, just like regular spell tabs --}}
			{{else}}
				<div class="wizard-unavailable">
					<p>{{localize 'SPELLBOOK.Wizard.Unavailable'}}</p>
				</div>
			{{/if}}
		{{/if}}
		<div class="no-filter-results" style="display: none;" role="status">
			{{localize 'SPELLBOOK.Filters.NoResults'}}
		</div>
	</div>
</div>
