<div class="spell-comparison-content">
  {{#if spells.length}}
    <!-- Spell Comparison Table -->
    <table class="comparison-table">
      <thead>
        <tr>
          <th></th> <!-- Empty header for property names column -->
          {{#each spells}}
            <!-- Spell Header Column -->
            <th class="spell-header">
              <div class="spell-info">
                {{{enrichedIcon}}}
                <span class="spell-name">{{name}}</span>
              </div>
            </th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each comparisonData.properties}}
          <tr>
            <!-- Property Name Row Header -->
            <td class="property-name">{{name}}</td>

            <!-- Property Values for Each Spell -->
            {{#each values}}
              <td class="property-value {{#if highlight}}highlighted{{/if}}">
                {{value}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <!-- Empty Comparison State -->
    <div class="empty-comparison">
      <p>{{localize "SPELLBOOK.Comparison.NoSpellsSelected"}}</p>
    </div>
  {{/if}}
</div>
