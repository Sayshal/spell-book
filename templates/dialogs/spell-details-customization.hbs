<div class="spell-details-customization-content">
  <p class="customization-description">
    {{localize "SPELLBOOK.Settings.DetailsCustomization.Description"}}
  </p>

  <!-- Player Spell Book Settings -->
  <section class="customization-section player-section">
    <h3 class="section-title">
      <i class="fas fa-user" aria-hidden="true"></i>
      {{localize "SPELLBOOK.Settings.DetailsCustomization.PlayerSpellBook"}}
    </h3>

    <!-- UI Elements -->
    <div class="settings-group">
      <h4 class="group-title">{{localize "SPELLBOOK.Settings.DetailsCustomization.UIElements"}}</h4>
      <div class="settings-grid">
        {{#each playerUIElements as |element|}}
          <div class="setting-item">
            <label class="setting-label" for="{{element.key}}">
              {{{element.checkboxHtml}}}
              <span class="setting-name">{{localize element.label}}</span>
            </label>
            <p class="setting-description">{{localize element.description}}</p>
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Metadata Elements -->
    <div class="settings-group">
      <h4 class="group-title">{{localize "SPELLBOOK.Settings.DetailsCustomization.MetadataElements"}}</h4>
      <div class="settings-grid">
        {{#each playerMetadataElements as |element|}}
          <div class="setting-item">
            <label class="setting-label" for="{{element.key}}">
              {{{element.checkboxHtml}}}
              <span class="setting-name">{{localize element.label}}</span>
            </label>
            <p class="setting-description">{{localize element.description}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </section>

  <!-- GM Settings (only show if user is GM) -->
  {{#if isGM}}
    <section class="customization-section gm-section">
      <h3 class="section-title">
        <i class="fas fa-crown" aria-hidden="true"></i>
        {{localize "SPELLBOOK.Settings.DetailsCustomization.GMSpellListManager"}}
      </h3>

      <!-- UI Elements -->
      <div class="settings-group">
        <h4 class="group-title">{{localize "SPELLBOOK.Settings.DetailsCustomization.UIElements"}}</h4>
        <div class="settings-grid">
          {{#each gmUIElements as |element|}}
            <div class="setting-item">
              <label class="setting-label" for="{{element.key}}">
                {{{element.checkboxHtml}}}
                <span class="setting-name">{{localize element.label}}</span>
              </label>
              <p class="setting-description">{{localize element.description}}</p>
            </div>
          {{/each}}
        </div>
      </div>

      <!-- Metadata Elements -->
      <div class="settings-group">
        <h4 class="group-title">{{localize "SPELLBOOK.Settings.DetailsCustomization.MetadataElements"}}</h4>
        <div class="settings-grid">
          {{#each gmMetadataElements as |element|}}
            <div class="setting-item">
              <label class="setting-label" for="{{element.key}}">
                {{{element.checkboxHtml}}}
                <span class="setting-name">{{localize element.label}}</span>
              </label>
              <p class="setting-description">{{localize element.description}}</p>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
  {{/if}}
</div>
