<nav data-group="primary">
	{{#each tabs}}
		{{#if (eq tab "spell")}} {{!-- Only show the spells tab --}}
			<a class="item control active" data-group="primary" data-tab="{{ tab }}" data-action="tab"
				data-tooltip="{{ label }}" aria-label="{{ localize label }}" data-document-class="{{ documentClass }}"
				data-types="{{ types }}">
				{{#if icon}}<i class="{{ icon }}"></i>{{/if}}
				{{#if svg}}<dnd5e-icon src="{{ svg }}"></dnd5e-icon>{{/if}}
			</a>
		{{/if}}
	{{/each}}
</nav>
